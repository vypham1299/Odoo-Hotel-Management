    <!-- actions -->
    <menuitem id="menu_open_hotel_sale_service_tree" 
              name="Sale Service" 
              parent="hotel_management.hotel_management_root" 
              action="action_hotel_sale_service" />

    <menuitem id="menu_open_hotel_view_tree" 
              name="Hotel Invoices" 
              parent="hotel_management.hotel_management_root" 
              action="action_hotel_invoices" />
  </data>
</odoo>